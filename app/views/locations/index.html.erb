<h1>Event Locations</h1>

<div class="row">
  <div class="container">
    <a href="/locations/new" class="btn btn-success active float-right">New Location</a>
  </div><br>
<div class = "col-sm-3"></div>
<table class="table table-striped col-sm-9">
  <thead class = "bg-info text-white">
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>Capacity</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
   <% @locations.each do |location| %>
      <tr>
      <td><%= link_to location.name, location %></td>
        <td><%= location.address %></td>
        <td><%= location.city %></td>
        <td><%= location.capacity %></td>
        <td><%= location.email %></td>
        <td><%= location.phone %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Edit', edit_location_path(location) %></td>
          <td><%= link_to 'Delete', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        </tr>
    <% end %>
  </tbody>
</table>
</div>