<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
  <br>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 
  <div class="form-group clear">
    <%= form.label :name, class: "col-md-4 control-label"  %>
    <div class="col-md-5">
    <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= form.label :age, class: "col-md-4 control-label"  %>
    <div class="col-md-5">
    <%= form.text_field :age, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= form.label :home_address, class: "col-md-4 control-label"  %>
    <div class="col-md-5">
    <%= form.text_field :home_address, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= form.label :email, class: "col-md-4 control-label"  %>
    <div class="col-md-5">
    <%= form.text_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :password, class: "col-md-4 control-label"  %>
    <div class="col-md-5">
    <%= form.password_field :password, class: "form-control", :value => @user.password %>
    </div>
  
  <div class="form-group">
  <%= form.submit class: "btn btn-large btn-primary" %>
  </div>
  
<% end %>
