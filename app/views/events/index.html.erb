<p id="notice"><%= notice %></p>
<h1>Events</h1>
<a href = "/events/new" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">New Event</a>

<% @events.each do |event| %>
  <div data-event-id ="<%=event.id%>" class="eventContainer col-md-6 offset-md-3 bg-light">
    <h3 class="text-dark"><%= event.title %></h3>
    <div>
      <p><%= event.description %></p>
    </div>
    <div class="pull-right">
      <%= event.user_id %>
    </div>
    <div class="pull-right">
      <h6><%= event.date %></h6>
    </div>
    <div class="pull-right">
      <span class="badge badge-pill badge-dark"><%= event.tag_id %></span>
    </div>
    <div class="pull-right">
      <h6><%= event.location_id %></h6>
    </div>
    <div class ="pull-right">
      <h6><%= event.price %></h6>
    </div>
  </div>
  <br>
<% end %>

