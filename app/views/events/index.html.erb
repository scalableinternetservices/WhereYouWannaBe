<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<br>
<p id="notice"><%= notice %></p>

<div class=row>
<div class="container">
<a href = "/events/new" class="btn btn-primary active float-right" role="button" aria-pressed="true">New Event</a>
</div>
</div>
<br>
<% @events.each do |event| %>
<div class="card text-center">
  <div class="card-header bg-info text-white">
    <span class="badge badge-pill badge-warning"><%= event.tag_id %></span>
  </div>
  <div class="card-body">
    <button type="button" class="btn btn-default float-right">
      <%= link_to 'Edit', edit_event_path(event) %>
    <!--<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit-->
    </button>
    <i class="float-left">$<%= event.price %></i>
    <h5 class="card-title"><%= event.title %></h5>
    <p class="card-text"><%= event.description %></p>
    <%= link_to "View Details", event, class:'btn btn-success' %>
    <%= link_to 'Attend Event',  new_attendee_path, class:'btn btn-warning' %>
  </div>
  <div class="card-footer text-muted">
    <p>When : <%= event.date %> &nbsp &nbsp Where: <%= event.location_id %></p>
  </div>
</div>
<br>
<% end %>
